{
  "name": "up-d",
  "version": "1.0.0",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects. Built with typescript.",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "dev": "next src/app",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build": "npm run build-public && npm run build-functions && npm run build-app && npm run copy-deps && npm run install-deps",
    "preserve": "npm run build-public && npm run build-functions && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-app": "next build \"src/app\"",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-functions": "tsc --project src/functions",
    "lint-app": "tslint --project src/app",
    "typecheck-app": "tsc --project src/app",
    "lint-functions": "tslint --project src/functions",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && npm i"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@zeit/next-typescript": "^1.1.0",
    "es6-promise": "4.1.1",
    "firebase-admin": "^6.3.0",
    "firebase-functions": "^2.1.0",
    "jss": "^9.8.7",
    "next": "^7.0.0",
    "next-redux-saga": "4.0.0",
    "next-redux-wrapper": "2.0.0",
    "node-fetch": "^2.3.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-jss": "^8.6.1",
    "react-redux": "5.0.7",
    "redux": "4.0.1",
    "redux-saga": "1.0.1",
    "typescript": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-info": "^4.1.13",
    "@storybook/addon-knobs": "^4.1.13",
    "@storybook/addon-options": "^4.1.13",
    "@storybook/addon-storysource": "^4.1.13",
    "@storybook/addon-viewport": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "@types/jest": "^24.0.9",
    "@types/next": "^7.0.0",
    "@types/node": "^11.9.5",
    "@types/react": "^16.6.0",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "firebase-tools": "^6.1.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "redux-devtools-extension": "2.13.2",
    "rimraf": "2.6.2",
    "storybook-addon-react-docgen": "^1.0.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0"
  }
}
